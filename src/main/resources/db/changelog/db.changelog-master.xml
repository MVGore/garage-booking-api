<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Users Table -->
    <changeSet id="1" author="mvgore">
        <createTable tableName="users">
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Garages Table -->
    <changeSet id="2" author="mvgore">
        <createTable tableName="garages">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)" />
            <column name="description" type="TEXT" />
            <column name="location" type="VARCHAR(100)" />
            <column name="price_range" type="VARCHAR(50)" />
        </createTable>

        <!-- FK moved here (correct place) -->
        <addForeignKeyConstraint baseTableName="garages"
                                 baseColumnNames="owner_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_garage_owner"/>
    </changeSet>

    <!-- Services Table -->
    <changeSet id="3" author="mvgore">
        <createTable tableName="services">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="garage_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)" />
            <column name="price" type="NUMERIC(10,2)" />
            <column name="duration_minutes" type="INT" />
        </createTable>

        <addForeignKeyConstraint baseTableName="services"
                                 baseColumnNames="garage_id"
                                 referencedTableName="garages"
                                 referencedColumnNames="id"
                                 constraintName="fk_service_garage"/>
    </changeSet>

    <!-- Bookings Table -->
    <changeSet id="4" author="mvgore">
        <createTable tableName="bookings">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="customer_id" type="BIGINT" />
            <column name="garage_id" type="BIGINT" />
            <column name="service_id" type="BIGINT" />
            <column name="status" type="VARCHAR(20)" />
            <column name="booking_date" type="TIMESTAMP" />
        </createTable>

        <addForeignKeyConstraint baseTableName="bookings"
                                 baseColumnNames="customer_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_booking_customer"/>

        <addForeignKeyConstraint baseTableName="bookings"
                                 baseColumnNames="garage_id"
                                 referencedTableName="garages"
                                 referencedColumnNames="id"
                                 constraintName="fk_booking_garage"/>

        <addForeignKeyConstraint baseTableName="bookings"
                                 baseColumnNames="service_id"
                                 referencedTableName="services"
                                 referencedColumnNames="id"
                                 constraintName="fk_booking_service"/>
    </changeSet>

</databaseChangeLog>
